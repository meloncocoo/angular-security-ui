{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "update",
      "args": ["update"]
    },
    {
      "taskName": "dev",
      "isBuildCommand": true,
      "args": ["run", "server:dev:hmr"]
    },
    {
      "taskName": "start",
      "args": ["run", "start"]
    },
    {
      "taskName": "prod",
      "args": ["run", "build:prod"]
    },
    {
      "taskName": "server:prod",
      "args": ["run", "server:prod"]
    }
  ]
}